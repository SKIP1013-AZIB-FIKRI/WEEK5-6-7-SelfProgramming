package selfProgramming;
import java.util.Scanner;
public class BlockStatement2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		double amount,balance;
		System.out.print("Please enter your balance in your bank : RM ");
		balance = sc.nextDouble();
		System.out.print("Please enteer the amount you want : RM ");
		amount = sc.nextDouble();
		
		if (amount <= balance)
		{  balance = balance - amount;  
		
		System.out.println("Acct new balance =  " + balance);
		}
		 
		else {	
			System.out.println ("You dont have sufficient balance ");
		}
	}

}
